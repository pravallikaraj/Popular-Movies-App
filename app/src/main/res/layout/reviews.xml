<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorLightGreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/review_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review_divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_spacing"
        android:layout_marginTop="20dp"
        tools:text = "Review Author"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/tv_review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_review_author"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_spacing"
        android:layout_marginTop="20dp"
        tools:text = "Review Description"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"

        />

    <TextView
        android:id="@+id/tv_no_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_review_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_spacing"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/colorBlack"

        />


</androidx.constraintlayout.widget.ConstraintLayout>